<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <ImageView
        android:src="@drawable/foto"
        android:layout_centerHorizontal="true"
        android:layout_height="150dp"
        android:layout_width="150dp"
        android:layout_marginTop="20dp"
        android:id="@+id/etFoto"
        android:layout_below="@+id/tvHalaman"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvHalaman"
        android:textStyle="bold"
        android:layout_marginTop="60dp"
        android:text="Halaman Profil"
        android:gravity="center"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etNim"
        android:layout_below="@+id/etFoto"
        android:text="Nim : 10118409"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10sp"
        android:layout_marginRight="30dp"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etNim"
        android:text="Nama : Anzala Filaili Fadlianto"
        android:textStyle="bold"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10sp"
        android:layout_marginRight="30dp"
        android:id="@+id/etNim2"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etNama"
        android:layout_below="@+id/etNim2"
        android:text="Kelas : IF-10"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10sp"
        android:layout_marginRight="30dp"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etNama2"
        android:layout_below="@+id/etNama"
        android:text="Deskripsi : "
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10sp"
        android:layout_marginRight="30dp"
        android:textStyle="bold"
        />

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/etKelas"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etNama2"
        android:text="Saya seorang mahasiswa yang menyukai hal tentang seni "
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10sp"
        android:layout_marginRight="30dp"
        android:layout_centerHorizontal="true"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kembali"
        android:id="@+id/btnKembali"
        android:layout_below="@+id/etKelas"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:textColor="#ffffff"
        android:backgroundTint="@color/btnsuccess"
        />

</RelativeLayout>